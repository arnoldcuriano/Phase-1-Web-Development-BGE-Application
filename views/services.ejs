  <div class="content">
    <div class="header">
      <h1>Services</h1>
      <div>
        <span>Admin, <a href="/auth/logout">Logout</a></span>
      </div>
    </div>
    <div class="announcement-container">
      <% if (announcements && announcements.length> 0) { %>
        <% announcements.forEach(announcement=> { %>
          <div class="announcement-item">
            <h3>
              <%= announcement.title %>
            </h3>
            <div class="announcement-description"><%- announcement.description %></div>
          </div>
          <% }) %>
            <% } else { %>
              <p>No announcements available.</p>
              <% } %>
    </div>

    <!-- Main Content -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Service List</h2>
      <div class="search-container d-flex ml-auto">
        <input type="text" id="searchInput" class="form-control mr-2" placeholder="Search">
        <button class="adbutton" id="addServiceBtn">Add New Service</button>
      </div>
    </div>

    <!-- Datatable -->
    <table id="serviceTable" class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="serviceTableBody">
        <!-- AJAX Services will load here -->
      </tbody>
    </table>



    <!-- Modals -->

    <!-- Add Service Modal -->
    <div class="modal fade" id="addServiceModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Service</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <form id="addServiceForm">
            <div class="modal-body">
              <div class="form-group">
                <label for="addServiceName">Name</label>
                <input type="text" class="form-control" id="addServiceName" name="name" required>
              </div>
              <div class="form-group">
                <label for="addServiceDescription">Description</label>
                <textarea class="form-control" id="addServiceDescription" name="description" rows="5"></textarea>
              </div>
              <div class="form-group">
                <label for="addServicePrice">Price</label>
                <div class="input-group">
                  <select class="form-select" id="addServiceCurrency" name="currency" required>
                    <option value="">Select Currency</option>
                    <option value="PHP">PHP</option>
                    <option value="USD">USD</option>
                  </select>
                  <input type="number" step="0.01" class="form-control" id="addServicePrice" name="price" required>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Add Service</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Edit Service Modal -->
    <div class="modal fade" id="editServiceModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Service</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <form id="editServiceForm">
            <div class="modal-body">
              <input type="hidden" id="serviceId" name="id">
              <div class="form-group">
                <label for="serviceName">Name</label>
                <input type="text" class="form-control" id="serviceName" name="name" required>
              </div>
              <div class="form-group">
                <label for="serviceDescription">Description</label>
                <textarea class="form-control" id="serviceDescription" name="description" rows="5"></textarea>
              </div>
              <div class="form-group">
                <label for="servicePrice">Price</label>
                <div class="input-group">
                  <select class="form-select" id="serviceCurrency" name="currency">
                    <option value="PHP">PHP</option>
                    <option value="USD">USD</option>
                  </select>
                  <input type="text" class="form-control" id="servicePrice" name="price" required>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Update Service</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this service?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
          </div>
        </div>
      </div>
    </div>


    <!-- CKEditor -->
    <script src="https://cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>

    <%- include('partials/footer') %>

      <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
      <script>
        $(document).ready(function () {
          let dataTable;

          // Add CSS to fix list positioning
          $('<style>')
            .prop('type', 'text/css')
            .html(`
                .table td ul, .table td ol {
                  text-align: left;
                  padding-left: 20px;
                } 
              `)
            .appendTo('head');

          // Initialize DataTable
          function initializeDataTable() {
            dataTable = $('#serviceTable').DataTable({
              processing: true,
              serverSide: true,
              ajax: {
                url: '/services',
                type: 'GET',
                data: function (d) {
                  return $.extend({}, d, {
                    // You can add additional parameters here if needed
                  });
                },
                dataSrc: function (json) {
                  // Update total services count
                  $('#totalServices').text(json.recordsTotal);
                  return json.data;
                }
              },
              paging: true,
              pageLength: 10,
              lengthChange: false,
              searching: false,
              info: true,
              columns: [
                { data: null, render: (data, type, row, meta) => meta.row + meta.settings._iDisplayStart + 1 },
                { data: 'name' },
                {
                  data: 'description',
                  render: function (data, type, row) {
                    return '<div class="description-content">' + data + '</div>';
                  }
                },
                {
                  data: 'price',
                  render: (data, type, row) => `${row.currency} ${parseFloat(data).toFixed(2)}`
                },
                {
                  data: null,
                  render: (data, type, row) => `
                      <button class="btn btn-success edit-btn" data-service='${JSON.stringify(row)}'>Edit</button>
                      <button class="btn btn-danger delete-btn" data-service-id="${row._id}">Delete</button>
                    `
                }
              ],
              language: {
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                paginate: {
                  first: "First",
                  last: "Last",
                  next: "Next",
                  previous: "Previous"
                }
              },
              drawCallback: function (settings) {
                bindServiceEventHandlers();
              }
            });
          }

          // Custom search function
          function customSearch(value) {
            dataTable.search(value).draw();
          }

          // Bind event handlers for edit/delete buttons
          function bindServiceEventHandlers() {
            // Edit service button click
            $('.edit-btn').off('click').on('click', function () {
              const service = $(this).data('service');
              $('#editServiceModal #serviceId').val(service._id);
              $('#editServiceModal #serviceName').val(service.name);
              $('#editServiceModal #serviceDescription').val(service.description);
              $('#editServiceModal #serviceCurrency').val(service.currency);
              $('#editServiceModal #servicePrice').val(parseFloat(service.price).toFixed(2));
              CKEDITOR.instances.serviceDescription.setData(service.description);
              $('#editServiceModal').modal('show');
            });

            // Delete service button click
            $('.delete-btn').off('click').on('click', function () {
              const serviceId = $(this).data('service-id');
              $('#confirmDelete').data('service-id', serviceId);
              $('#deleteConfirmationModal').modal('show');
            });
          }

          // Add Service Button Click
          $('#addServiceBtn').on('click', function () {
            $('#addServiceModal').modal('show');
          });

          // Add Service Form
          $('#addServiceForm').on('submit', function (e) {
            e.preventDefault();
            CKEDITOR.instances.addServiceDescription.updateElement();

            const formData = new FormData(this);
            const price = formData.get('price');

            if (price === '' || isNaN(parseFloat(price))) {
              alert('Please enter a valid price');
              return;
            }

            $.ajax({
              url: '/services/add',
              type: 'POST',
              data: Object.fromEntries(formData),
              success: function (response) {
                $('#addServiceModal').modal('hide');
                dataTable.ajax.reload();
              },
              error: function (error) {
                console.error('Error adding service:', error);
                alert('Error adding service: ' + error.responseText);
              }
            });
          });

          // Delete Confirmation
          $('#confirmDelete').on('click', function () {
            const serviceId = $(this).data('service-id');
            $.ajax({
              url: `/services/delete/${serviceId}`,
              type: 'POST',
              success: function () {
                $('#deleteConfirmationModal').modal('hide');
                dataTable.ajax.reload();
              },
              error: function (error) {
                console.error('Error deleting service:', error);
              }
            });
          });

          // Edit Service Form
          $('#editServiceForm').on('submit', function (e) {
            e.preventDefault();
            CKEDITOR.instances.serviceDescription.updateElement();

            const formData = new FormData(this);
            const price = formData.get('price');

            if (price === '' || isNaN(parseFloat(price))) {
              alert('Please enter a valid price');
              return;
            }

            $.ajax({
              url: '/services/update',
              type: 'POST',
              data: Object.fromEntries(formData),
              success: function () {
                $('#editServiceModal').modal('hide');
                dataTable.ajax.reload();
              },
              error: function (error) {
                console.error('Error updating service:', error);
                alert('Error updating service: ' + error.responseText);
              }
            });
          });

          // CKEditor Configuration (Remove Media Tools)
          CKEDITOR.replace('addServiceDescription', {
            removePlugins: 'image,table,mediaembed'
          });
          CKEDITOR.replace('serviceDescription', {
            removePlugins: 'image,table,mediaembed'
          });

          // Custom Search Functionality
          $('#searchInput').on('keyup', function () {
            customSearch($(this).val());
          });

          // Initial DataTable initialization
          initializeDataTable();
        });
      </script>