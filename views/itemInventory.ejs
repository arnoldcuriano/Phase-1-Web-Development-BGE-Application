<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

         <%- include('partials/footer') %>
         <script>
            $(document).ready(function () {
              var table = $('#itemTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                  "url": "/it/item-inventory/data",
                  "type": "POST",
                  "data": function (d) {
                    d.search = $('#searchInput').val(); // Pass custom search value
                  }
                },
                "columns": [
                  { "data": null, "render": function (data, type, row, meta) {
                      return meta.row + meta.settings._iDisplayStart + 1; // Row number
                  }},
                  { "data": "itemName" },
                  { "data": "category.name", "defaultContent": "Unassigned" }, // Handle empty categories
                  { "data": "serialNumber" },
                  { "data": "quantity" },
                  { "data": "inDate", "render": function (data) {
                      return data ? new Date(data).toDateString() : ''; // Format date
                  }},
                  { "data": null, "render": function (data, type, row) {
                      return '<button class="btn btn-success btn-sm edit-btn" data-item=\'' + JSON.stringify(row) + '\'>Edit</button> ' +
                             '<button class="btn btn-danger btn-sm delete-btn" data-id="' + row._id + '">Delete</button>';
                  }}
                ],
                "pageLength": 10,  // Default page length
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "order": [[1, 'asc']],
                "searching": false // Disable default search, using custom search
              });
            
              // Custom search functionality
              $('#searchInput').on('input', function () {
                table.ajax.reload(); // Reload data when search input changes
              });
            
              // Open Add Item Modal
              $('#addItemBtn').on('click', function () {
                clearAddForm(); // Clear form before opening
                $('#addItemModal').modal('show');
              });
            
              // Clear Add Form
              function clearAddForm() {
                $('#itemName').val('');
                $('#category').val('');
                $('#serialNumber').val('');
                $('#quantity').val('');
                $('#inDate').val('');
              }
            
              // Save New Item
              $('#saveItemBtn').on('click', function () {
                var newItem = {
                  itemName: $('#itemName').val(),
                  category: $('#category').val(),
                  serialNumber: $('#serialNumber').val(),
                  quantity: $('#quantity').val(),
                  inDate: $('#inDate').val()
                };
            
                // Perform an AJAX POST request to add the new item
                $.ajax({
                  url: '/it/item-inventory/add',
                  method: 'POST',
                  contentType: 'application/json',
                  data: JSON.stringify(newItem),
                  success: function (response) {
                    if (response.success) {
                      $('#addItemModal').modal('hide');
                      clearAddForm();
                      table.ajax.reload(function () {
                        // Go to the last page after adding a new item
                        table.page('last').draw('page');
                      });
                    } else {
                      alert('Error adding item: ' + response.error);
                    }
                  },
                  error: function (xhr, status, error) {
                    console.error('AJAX Error:', status, error);
                    alert('An error occurred while adding the item.');
                  }
                });
              });
            
              // Open Edit Item Modal
              $(document).on('click', '.edit-btn', function () {
                var item = $(this).data('item');
                $('#editItemId').val(item._id);
                $('#editItemName').val(item.itemName);
                $('#editCategory').val(item.category ? item.category._id : '');
                $('#editSerialNumber').val(item.serialNumber);
                $('#editQuantity').val(item.quantity);
                $('#editInDate').val(item.inDate ? new Date(item.inDate).toISOString().split('T')[0] : '');
                $('#editItemModal').modal('show');
              });
            
              // Update Existing Item
              $('#updateItemBtn').on('click', function () {
                var updatedItem = {
                  _id: $('#editItemId').val(),
                  itemName: $('#editItemName').val(),
                  category: $('#editCategory').val(),
                  serialNumber: $('#editSerialNumber').val(),
                  quantity: $('#editQuantity').val(),
                  inDate: $('#editInDate').val()
                };
            
                $.ajax({
                  url: '/it/item-inventory/update',
                  method: 'PUT',
                  contentType: 'application/json',
                  data: JSON.stringify(updatedItem),
                  success: function (response) {
                    if (response.success) {
                      $('#editItemModal').modal('hide');
                      table.ajax.reload(null, false); // Reload table without resetting pagination
                    } else {
                      alert('Error updating item: ' + response.error);
                    }
                  },
                  error: function (xhr, status, error) {
                    console.error('AJAX Error:', status, error);
                    alert('An error occurred while updating the item.');
                  }
                });
              });
            
              // Open Delete Confirmation Modal
              $(document).on('click', '.delete-btn', function () {
                var deleteItemId = $(this).data('id');
                $('#confirmDeleteBtn').data('id', deleteItemId); // Pass the ID to the confirmation button
                $('#deleteConfirmModal').modal('show');
              });
            
              // Confirm Delete Item
              $('#confirmDeleteBtn').on('click', function () {
                var deleteItemId = $(this).data('id');
                $.ajax({
                  url: '/it/item-inventory/delete/' + deleteItemId,
                  method: 'DELETE',
                  success: function (response) {
                    if (response.success) {
                      $('#deleteConfirmModal').modal('hide');
                      table.ajax.reload(null, false); // Keep pagination on the current page
                    } else {
                      alert('Error deleting item: ' + response.error);
                    }
                  },
                  error: function (xhr, status, error) {
                    console.error('AJAX Error:', status, error);
                    alert('An error occurred while deleting the item.');
                  }
                });
              });
            });
            </script>
            