   <div class="content">
      <div class="header">
         <h1>IT Inventory</h1>
         <div>
            <span>Admin, <a href="/auth/logout">Logout</a></span>
         </div>
      </div>
      <!-- Announcement Section -->
      <div class="announcement-container">
         <% if (announcements && announcements.length> 0) { %>
            <% announcements.forEach(announcement=> { %>
               <div class="announcement-item">
                  <h3>
                     <%= announcement.title %>
                  </h3>
                  <div class="announcement-description"><%- announcement.description %></div>
               </div>
               <% }) %>
                  <% } else { %>
                     <p>No announcements available.</p>
                     <% } %>
            </div>
      <!-- Main Content -->
      <div class="mt-5">
         <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Item Inventory</h2>
            <div class="search-container d-flex">
               <input type="text" id="searchInput" class="form-control mr-2" placeholder="Search">
               <button class="adbutton" id="addItemBtn">Add Item</button>
            </div>
         </div>
         <table id="itemTable" class="table table-striped">
            <thead>
               <tr>
                  <th>ID</th>
                  <th>Item Name</th>
                  <th>Category</th>
                  <th>Serial #</th>
                  <th>QTY</th>
                  <th>In Date</th>
                  <th>Actions</th>
               </tr>
            </thead>
            <tbody id="itemTableBody">
               <% items.forEach((item, index) => { %>
                 <tr>
                   <td><%= (currentPage - 1) * itemsPerPage + index + 1 %></td>
                   <td><%= item.itemName %></td>
                   <td><%= item.category ? item.category.name : 'Unassigned' %></td>
                   <td><%= item.serialNumber %></td>
                   <td><%= item.quantity %></td>
                   <td><%= item.inDate ? item.inDate.toDateString() : '' %></td>
                   <td>
                     <button class="btn btn-success btn-sm edit-btn"
                       data-item='<%= JSON.stringify(item) %>'>Edit</button>
                     <button class="btn btn-danger btn-sm delete-btn" data-id="<%= item._id %>">Delete</button>
                   </td>
                 </tr>
               <% }) %>
            </tbody>                
         </table>
