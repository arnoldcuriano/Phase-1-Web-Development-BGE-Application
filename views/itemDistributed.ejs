            <td><%= item.department ? item.department.name : '' %></td>
            <td><%= item.category ? item.category.name : '' %></td>
            <td><%= item.qty %></td>
            <td><%= item.outDate.toDateString() %></td>
            <td><%= item.items.map(inventoryItem => inventoryItem.itemName).join(', ') %></td>
            <td><%= item.items.map(inventoryItem => inventoryItem.serialNumber).join(', ') %></td> <!-- Display serial numbers -->
