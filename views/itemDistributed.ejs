<script>
  $(document).ready(function() {
    // Initialize DataTable with custom search enabled
    var table = $('#distributedItemTable').DataTable({
      pageLength: 10,
      lengthChange: false,
      searching: true, // Enable default search
      ordering: true,
      info: true,
      paging: true,
      dom: 'lrtip'
    });
  
    // Custom search functionality
    $('#searchInput').on('keyup', function() {
      table.search(this.value).draw();
    });
  
    // Add Distributed Item
    $('#addDistributedItemBtn').on('click', function() {
      $('#addDistributedItemModal').modal('show');
    });
  
    $('#addDistributedItemForm').on('submit', function(e) {
      e.preventDefault();
      var formData = $(this).serializeArray();
  
      var itemsArray = $('#addDistributedItemModal input[name="items"]:checked').map(function() {
        return $(this).val();
      }).get();
  
      if (itemsArray.length === 0) {
        alert('Please select at least one item.');
        return;
      }
  
      formData = formData.filter(function(item) {
        return item.name !== 'items';
      });
  
      itemsArray.forEach(function(item) {
        formData.push({ name: 'items', value: item });
      });
  
      formData.forEach(function(field) {
        if (field.name === 'qty') {
          field.value = field.value.split(',').map(Number);
        }
      });
  
      $.ajax({
        url: '/it/item-distributed/add',
        type: 'POST',
        data: $.param(formData),
        success: function(response) {
          $('#addDistributedItemModal').modal('hide');
          location.reload();
        },
        error: function(error) {
          console.error('Add failed', error);
          alert('Failed to add item. Please try again.');
        }
      });
    });
  
    // Edit Distributed Item
    $('.edit-btn').on('click', function() {
      var item = $(this).data('item');
      $('#editItemId').val(item._id);
      $('#editMember').val(item.member ? item.member._id : '');
      $('#editDepartment').val(item.department ? item.department._id : '');
      $('#editCategory').val(item.category ? item.category._id : '');
      $('#editQty').val(item.qty); // This will now be a comma-separated string
  
      $('#editItem input').prop('checked', false);
      item.items.forEach(function(selectedItem) {
        $('#editItem input[value="' + selectedItem._id + '"]').prop('checked', true);
      });
  
      $('#editDistributedItemModal').modal('show');
    });
  
    $('#editDistributedItemForm').on('submit', function(e) {
      e.preventDefault();
      var formData = $(this).serializeArray();
  
      var itemsArray = $('#editDistributedItemModal input[name="items"]:checked').map(function() {
        return $(this).val();
      }).get();
  
      if (itemsArray.length === 0) {
        alert('Please select at least one item.');
        return;
      }
  
      formData = formData.filter(function(item) {
        return item.name !== 'items';
      });
  
      itemsArray.forEach(function(item) {
        formData.push({ name: 'items', value: item });
      });
  
      formData.forEach(function(field) {
        if (field.name === 'qty') {
          field.value = field.value.split(',').map(Number);
        }
      });
  
      $.ajax({
        url: '/it/item-distributed/update',
        type: 'POST',
        data: $.param(formData),
        success: function(response) {
          $('#editDistributedItemModal').modal('hide');
          location.reload();
        },
        error: function(error) {
          console.error('Update failed', error);
          alert('Failed to update item. Please try again.');
        }
      });
    });
  
    // Delete Distributed Item
    var deleteItemId;
    $('.delete-btn').on('click', function() {
      deleteItemId = $(this).data('item-id');
      $('#deleteConfirmModal').modal('show');
    });
  
    $('#confirmDeleteBtn').on('click', function() {
      $.ajax({
        url: '/it/item-distributed/delete/' + deleteItemId,
        type: 'DELETE',
        success: function(response) {
          $('#deleteConfirmModal').modal('hide');
          location.reload();
        },
        error: function(error) {
          console.error('Delete failed', error);
          alert('Failed to delete item. Please try again.');
        }
      });
    });
  });
