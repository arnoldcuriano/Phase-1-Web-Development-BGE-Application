<!-- Add Distributed Item Modal -->
<div class="modal fade" id="addDistributedItemModal" tabindex="-1" role="dialog" aria-labelledby="addDistributedItemModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addDistributedItemModalLabel">Add Distributed Item</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="addDistributedItemForm">
        <div class="modal-body">
          <!-- Form Fields -->
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="addMember" class="form-label">Name</label>
              <select class="form-select" id="addMember" name="member" required>
                <option value="">Select a member</option>
                <% members.forEach(member => { %>
                  <option value="<%= member._id %>"><%= member.firstName %> <%= member.lastName %></option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-6 mb-3">
              <label for="addDepartment" class="form-label">Department</label>
              <select class="form-select" id="addDepartment" name="department" required>
                <option value="">Select a department</option>
                <% departments.forEach(department => { %>
                  <option value="<%= department._id %>"><%= department.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="addCategory" class="form-label">Category</label>
              <select class="form-select" id="addCategory" name="category" required>
                <option value="">Select a category</option>
                <% categories.forEach(category => { %>
                  <% if (!category.parentCategory) { %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                    <% categories.forEach(childCategory => { %>
                      <% if (childCategory.parentCategory && childCategory.parentCategory.toString() === category._id.toString()) { %>
                        <option value="<%= childCategory._id %>">&nbsp;&nbsp;- <%= childCategory.name %></option>
                      <% } %>
                    <% }) %>
                  <% } %>
                <% }) %>
              </select>
            </div>
            <div class="col-md-6 mb-3">
              <label for="addQty" class="form-label">QTY</label>
              <input type="text" class="form-control" id="addQty" name="qty" required>
              <small class="form-text text-muted">Enter quantities separated by commas (e.g., 1,2,3)</small>
            </div>
          </div>
          <div class="mb-3">
            <label for="addItem" class="form-label">Items</label>
            <div class="item-list" style="max-height: 200px; overflow-y: auto;">
              <% inventoryItems.forEach(item => { %>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="<%= item._id %>" id="item<%= item._id %>" name="items">
                  <label class="form-check-label" for="item<%= item._id %>">
                    <%= item.itemName %> - <%= item.serialNumber %>
                  </label>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Distributed Item</button>
        </div>
      </form>
    </div>
  </div>
</div>

