  </div>

  <div class="content">
    <div class="header">
      <h1>Department: Digital Marketing</h1>

      <div>
        <span>Admin, <a href="/auth/logout">Logout</a></span>
      </div>
    </div>
    <div class="announcement-container">
      <% if (announcements && announcements.length> 0) { %>
        <% announcements.forEach(announcement=> { %>
          <div class="announcement-item">
            <h3>
              <%= announcement.title %>
            </h3>
            <div class="announcement-description"><%- announcement.description %></div>
          </div>
          <% }) %>
            <% } else { %>
              <p>No announcements available.</p>
              <% } %>
    </div>

    <div class="mt-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Clients</h2>
        <div class="search-container d-flex ml-auto">
          <!-- Custom Search Input -->
          <input type="text" id="searchInput" class="form-control mr-2" placeholder="Search">
          <button class="adbutton" id="addClientBtn">Add Client</button>
        </div>
      </div>
      <table id="clientTable" class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Client Name</th>
            <th>Project Name</th>
            <th>Terms File</th>
            <th>Services</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (clients.length> 0) { %>
            <% clients.forEach((client, index)=> { %>
              <tr>
                <td>
                  <%= index + 1 %>
                </td>
                <td>
                  <%= client.name %>
                </td>
                <td>
                  <% client.projects.forEach(project=> { %>
                    <div>
                      <%= project.name %>
                    </div>
                    <% }) %>
                </td>
                <td>
                  <% client.projects.forEach(project=> { %>
                    <% project.fileUpload.forEach(file=> { %>
                      <div class="file-link">
                        <!-- Ensure the file ID is hidden and only the file name is shown -->
                        <span class="file-id" style="display:none;">
                          <%= file._id %>
                        </span>
                        <% let fileName=file.split('-').slice(1).join('-'); %>
                          <i
                            class="fas <%= fileName.split('.').pop() === 'doc' || fileName.split('.').pop() === 'docx' ? 'fa-file-word' : 'fa-file-excel' %>"></i>
                          <span class="file-name">
                            <%= fileName %>
                          </span>
                      </div>
                      <% }) %>
                        <% }) %>
                </td>
                <td>
                  <% client.services.forEach(service=> { %>
                    <div>
                      <%= service.name %>
                    </div>
                    <% }) %>
                </td>
                <td>
                  <span
                    class="badge bg-<%= client.status === 'Completed' ? 'success' : client.status === 'On Progress' ? 'primary' : client.status === 'Maintenance' ? 'warning' : 'danger' %>">
                    <%= client.status %>
                  </span>
                </td>
                <td class="actions">
                  <button class="btn btn-success edit-btn" data-client='<%= JSON.stringify(client) %>'><i
                      class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i></button>
                  <button class="btn btn-danger delete-btn" data-client-id="<%= client._id %>"><i
                      class="fa-solid fa-trash" style="color: #ffffff;"></i></button>
                </td>
              </tr>
              <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="7" class="text-center">No clients found.</td>
                  </tr>
                  <% } %>
        </tbody>
      </table>
      <div id="noResultsMessage" class="text-center" style="display: none;">No items found matching your search.</div>
    </div>


    <!-- Add Client Modal -->
    <div class="modal fade" id="addClientModal" tabindex="-1" role="dialog" aria-labelledby="addClientModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addClientModalLabel">Add Client</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form id="addClientForm">
            <div class="modal-body">
              <div class="form-group">
                <label for="addClientName">Client Name</label>
                <input type="text" class="form-control" id="addClientName" name="name" required>
              </div>
              <div class="form-group">
                <label for="addProjects">Projects</label>
                <select class="form-control select2" id="addProjects" name="projects[]" multiple required>
                  <% projects.forEach(project=> { %>
                    <option value="<%= project._id %>">
                      <%= project.name %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="addServices">Services</label>
                <select class="form-control select2" id="addServices" name="services[]" multiple required>
                  <% services.forEach(service=> { %>
                    <option value="<%= service._id %>">
                      <%= service.name %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="addStatus">Status</label>
                <select class="form-control" id="addStatus" name="status" required>
                  <option value="On Progress">On Progress</option>
                  <option value="Completed">Completed</option>
                  <option value="Maintenance">Maintenance</option>
                  <option value="Overdue">Overdue</option>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="adbutton">Add Client</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Edit Client Modal -->
    <div class="modal fade" id="editClientModal" tabindex="-1" role="dialog" aria-labelledby="editClientModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editClientModalLabel">Edit Client</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form id="editClientForm">
            <div class="modal-body">
              <input type="hidden" id="clientId" name="id">
              <div class="form-group">
                <label for="editClientName">Client Name</label>
                <input type="text" class="form-control" id="editClientName" name="name" required>
              </div>
              <div class="form-group">
                <label for="editProjects">Projects</label>
                <select class="form-control select2" id="editProjects" name="projects[]" multiple required>
                  <% projects.forEach(project=> { %>
                    <option value="<%= project._id %>">
                      <%= project.name %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="editServices">Services</label>
                <select class="form-control select2" id="editServices" name="services[]" multiple required>
                  <% services.forEach(service=> { %>
                    <option value="<%= service._id %>">
                      <%= service.name %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="editStatus">Status</label>
                <select class="form-control" id="editStatus" name="status" required>
                  <option value="On Progress">On Progress</option>
                  <option value="Completed">Completed</option>
                  <option value="Maintenance">Maintenance</option>
                  <option value="Overdue">Overdue</option>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Update Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this client?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Delete Success Message -->
    <div class="alert alert-success delete-success" id="deleteSuccessMessage"
      style="display:none; position: fixed; bottom: 20px; right: 20px;">
      Client successfully deleted!
    </div>

    <!-- Loading Spinner -->
    <div class="modal" id="loadingSpinnerModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static"
      data-bs-keyboard="false">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-body text-center">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <div>Processing...</div>
          </div>
        </div>
      </div>
    </div>

    <!-- First, load jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Then, load Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Next, load DataTables -->
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

    <!-- Then, load Select2 -->



    <!-- Main Script -->
    <script>
      (function () {
        console.log("Script started");

        if (typeof jQuery === 'undefined') {
          console.error("jQuery is not loaded. Aborting script execution.");
          return;
        }

        console.log("jQuery is loaded");

        if (typeof bootstrap === 'undefined') {
          console.error("Bootstrap is not loaded. Some functionality may not work.");
        } else {
          console.log("Bootstrap is loaded");
        }

        if (typeof $.fn.DataTable === 'undefined') {
          console.error("DataTables is not loaded. Table functionality may not work.");
        } else {
          console.log("DataTables is loaded");
        }

        if (typeof $.fn.select2 === 'undefined') {
          console.error("Select2 is not loaded. Dropdown functionality may not work.");
        } else {
          console.log("Select2 is loaded");
        }

        $(document).ready(function () {
          console.log("DOM is ready");

          try {
            var table = $('#clientTable').DataTable({
              "paging": true,
              "pageLength": 10,
              "lengthChange": false,
              "searching": true,
              "info": true,
              "autoWidth": false,
              "dom": 't<"bottom"p>',
              "language": {
                "emptyTable": "No clients found.",
                "zeroRecords": "No items found matching your search."
              }
            });
            console.log("DataTable initialized");
          } catch (error) {
            console.error("Error initializing DataTable:", error);
          }

          $('#searchInput').on('keyup', function () {
            console.log("Search input changed");
            table.search(this.value).draw();
            if (table.rows({ filter: 'applied' }).count() === 0) {
              $('#noResultsMessage').show();
            } else {
              $('#noResultsMessage').hide();
            }
          });

          $('.modal').on('shown.bs.modal', function () {
            console.log("Modal shown:", this.id);
            try {
              $(this).find('.select2').select2({
                width: '100%',
                placeholder: 'Select options',
                allowClear: true,
                dropdownParent: $(this).find('.modal-content')
              });
              console.log("Select2 initialized for modal:", this.id);
            } catch (error) {
              console.error("Error initializing Select2 for modal:", this.id, error);
            }
          });

          $('#addClientBtn').on('click', function () {
            console.log("Add Client Button Clicked");
            try {
              $('#addClientModal').modal('show');
            } catch (error) {
              console.error("Error showing add client modal:", error);
            }
          });

          $('#addClientForm').on('submit', function (e) {
            e.preventDefault();
            console.log("Add Client Form Submitted");

            var formData = $(this).serialize();
            console.log("Serialized form data:", formData);

            try {
              $('#loadingSpinnerModal').modal('show');
            } catch (error) {
              console.error("Error showing loading spinner:", error);
            }

            $.ajax({
              url: '/clients/add',
              type: 'POST',
              data: formData,
              success: function (response) {
                console.log("Add client success:", response);
                $('#loadingSpinnerModal').modal('hide');
                $('#addClientModal').modal('hide');
                location.reload();
              },
              error: function (xhr, status, error) {
                console.error('Add client failed:', xhr.responseText, status, error);
                $('#loadingSpinnerModal').modal('hide');
                alert('Failed to add client. Please try again.');
              }
            });
          });

          // Add Event Listener for Edit Buttons
          $(document).on('click', '.edit-btn', function () {
            console.log("Edit Button Clicked");
            var client = $(this).data('client');
            console.log("Client data:", client);

            $('#editClientModal #clientId').val(client._id);
            $('#editClientModal #editClientName').val(client.name);

            var projectIds = client.projects.map(project => project._id);
            $('#editClientModal #editProjects').val(projectIds).trigger('change');

            var serviceIds = client.services.map(service => service._id);
            $('#editClientModal #editServices').val(serviceIds).trigger('change');

            $('#editClientModal #editStatus').val(client.status);

            $('#editClientModal').modal('show');
          });

          $('#editClientForm').on('submit', function (e) {
            e.preventDefault();
            console.log("Edit Client Form Submitted");

            var formData = $(this).serialize();
            console.log("Serialized form data:", formData);

            try {
              $('#loadingSpinnerModal').modal('show');
            } catch (error) {
              console.error("Error showing loading spinner:", error);
            }

            $.ajax({
              url: '/clients/update',
              type: 'POST',
              data: formData,
              success: function (response) {
                console.log("Update client success:", response);
                $('#loadingSpinnerModal').modal('hide');
                $('#editClientModal').modal('hide');
                location.reload();
              },
              error: function (xhr, status, error) {
                console.error('Update client failed:', xhr.responseText, status, error);
                $('#loadingSpinnerModal').modal('hide');
                alert('Failed to update client. Please try again.');
              }
            });
          });

          console.log("All event listeners set up");
        });

        console.log("Script finished");
      })();
    </script>

