<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <title>BGE Internal App</title>
    <link rel="icon" type="image/x-icon" href="images/bge-logo-favicon.png">
    <style>
        body {
            font-family: "Poppins", sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #292929;
            color: white;
            height: 100vh;
            padding: 20px;
            box-sizing: border-box;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .sidebar .logo {
            margin-bottom: 30px;
            text-align: center;
        }

        .sidebar .logo img {
            width: 80%;
        }

        .sidebar .profile {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            background-color: #1e1e1e;
            padding: 15px;
            border-radius: 8px;
            overflow: hidden;
        }

        .sidebar .profile img {
            border-radius: 50%;
            width: 60px;
            height: 60px;
            margin-right: 10px;
        }

        .sidebar .profile div {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            width: 100%;
        }

        .sidebar .profile div h3 {
            margin: 0;
            font-size: 16px;
        }

        .sidebar .profile div p {
            margin: 2px 0;
            font-size: 12px;
            color: #bbb;
            word-wrap: break-word;
        }

        .sidebar .profile div .role {
            background-color: #4caf50;
            color: white;
            padding: 2px 5px;
            border-radius: 5px;
            font-size: 12px;
        }

        .sidebar nav {
            display: flex;
            flex-direction: column;
        }

        .sidebar nav a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 10px 15px;
            margin: 5px 0;
            border-radius: 4px;
            transition: background 0.3s;
        }

        .sidebar nav a:hover {
            background-color: #34495e;
        }

        .sidebar nav a i {
            margin-right: 10px;
        }

        .sidebar .submenu {
            padding-left: 20px;
        }

        .content {
            margin-left: 270px;
            padding: 20px;
            box-sizing: border-box;
            flex: 1;
            overflow-y: auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header h1 {
            margin: 0;
            font-size: 24px;
            font-weight: 600;
        }


        .nav-tabs {
            margin-bottom: 20px;
        }

        .tab-content {
            border: 1px solid #dee2e6;
            border-top: none;
            padding: 20px;
            border-radius: 0 0 8px 8px;
        }

        .announcement-container {
            background-color: #e3f2fd;
            padding: 20px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
            border: 1px solid #42a5f5;
        }

        .announcement-container p {
            margin: 0;
            flex: 1;
        }

        .announcement-item {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
            animation: fadeInUp 0.5s ease forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInLeft {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        #announcement-history .announcement-item {
            animation: fadeInLeft 0.5s ease forwards;
        }

        .event-item {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
            animation: fadeInUp 0.5s ease forwards;
        }

        .form-group label {
            font-weight: 600;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-custom {
            background: linear-gradient(45deg, #34A853, #4285F4);
            border: none;
            color: white;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-custom:hover {
            background: linear-gradient(45deg, #4285F4, #34A853);
        }

        #char-count {
            text-align: right;
            color: #888;
            font-size: 12px;
        }

        .scrollable {
            max-height: 400px;
            overflow-y: auto;
        }

        .scrollable {
            max-height: 400px;
            overflow-y: auto;
            margin-top: 10px;
        }

        /* Greatday position */

        .bottom-menu {
            margin-top: auto;
        }

        .bottom-menu .nav-link img {
            width: 80px;
        }


        .footer {
            text-align: right;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <!-- Sidebar Section -->
    <div class="sidebar">
        <div class="logo">
            <img src="images/bge-logo-tr.png" alt="BGE Logo">
        </div>
        <div class="profile">
            <img src="<%= user.profilePicture %>" alt="Profile Picture">
            <div>
                <h3>
                    <%= user.name %>
                </h3>
                <span class="role">Admin</span>
            </div>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link text-white" href="/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
            <a class="nav-link text-white" href="/hr-department"><i class="fa-solid fa-book-open-reader"></i>
                Management</a>
            <a class="nav-link text-white" href="/members"><i class="fa-solid fa-address-card"></i>Members</a>
            <a class="nav-link text-white" href="/departments"><i class="fa-solid fa-house"></i>Departments</a>
            <a class="nav-link text-white" href="/services"><i class="fa-solid fa-briefcase"></i>Services</a>
            <a class="nav-link text-white" href="/projects"><i class="fa-solid fa-folder-open"></i>Projects</a>
            <a class="nav-link text-white" href="/clients"><i class="fa-solid fa-user"></i>Clients</a>
            <a class="nav-link text-white" href="#"><i class="fa-solid fa-square-poll-vertical"></i>Reports</a>
        </nav>

        <!-- IT Department Modal -->
        <div class="btn-group">
            <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                IT Department
            </button>
            <div class="dropdown-menu p-1">
                <a class="dropdown-item" href="/it/item-inventory">Inventory</a>
                <a class="dropdown-item" href="/it/item-distributed">Item Distributed</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/it/category-management">Category Management</a>
            </div>
        </div>

        <!-- GreatDay  -->
        <div class="bottom-menu">
            <a class="nav-link text-white" href="https://app.greatdayhr.com/" target="_blank">
                <img src="/images/GREAT-DAY-LOGO.png" alt="Time in - Time Out">
                <u>Attendance</u>
            </a>
        </div>
    </div>
    <div class="content">
        <div class="header">
            <h1>Management</h1>
            <div>
                <span>Admin, <a href="/auth/logout">Logout</a></span>
            </div>
        </div>
        <h6>Kindly post one announcement at a time.</h6>
        <div class="announcement-container">
            <% if (announcements && announcements.length> 0) { %>
                <% announcements.forEach(announcement=> { %>
                    <div class="announcement-item">
                        <h3>
                            <%= announcement.title %>
                        </h3>
                        <p class="announcement-description"><%- announcement.description %></p>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>No announcements available.</p>
                            <% } %>
        </div>

        <!-- Tab Navigation -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="announcements-tab" data-bs-toggle="tab"
                    data-bs-target="#announcements" type="button" role="tab" aria-controls="announcements"
                    aria-selected="true">Announcements</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="events-tab" data-bs-toggle="tab" data-bs-target="#events" type="button"
                    role="tab" aria-controls="events" aria-selected="false">Upcoming Events</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <!-- Announcements Tab -->
            <div class="tab-pane fade show active p-3" id="announcements" role="tabpanel"
                aria-labelledby="announcements-tab">
                <div class="container row rounded mt-4">
                    <div class="col bg-white rounded p-5 border">
                        <h3>Create New Announcement</h3>
                        <form id="announcement-form" action="/announcements/add" method="POST">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    placeholder="Enter title" required>
                            </div>
                            <div class="form-group">
                                <label for="editor">Description</label>
                                <textarea class="form-control" id="editor" placeholder="Write your Announcement Here.."
                                    required></textarea>
                                <input type="hidden" name="description" id="hidden-description" required>
                                <p id="char-count">0/250 characters</p>
                            </div>
                            <button type="submit" class="btn btn-custom mt-3">Announce</button>
                            <button type="button" class="btn btn-custom mt-3 d-none"
                                id="update-announcement">Update</button>
                        </form>
                    </div>
                </div>
                <div class="d-flexbg-light rounded mt-4 p-4">
                    <h3>Announcements History</h3>
                    <div class="scrollable">
                        <% if (announcements && announcements.length> 0) { %>
                            <% announcements.forEach(announcement=> { %>
                                <div class="announcement-item bg-white p-3 mb-3 rounded border"
                                    data-id="<%= announcement._id %>">
                                    <h4>
                                        <%= announcement.title %>
                                    </h4>
                                    <div class="announcement-description"><%- announcement.description %></div>
                                    <small class="text-muted">
                                        <%= new Date(announcement.date).toLocaleDateString() %>
                                    </small>
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <button class="btn btn-warning edit-announcement">Edit</button>
                                        <button class="btn btn-danger delete-announcement"
                                            data-id="<%= announcement._id %>">Delete</button>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <p>No announcements available.</p>
                                        <% } %>
                    </div>
                </div>
            </div>
            <!-- Upcoming Events Tab -->
            <div class="tab-pane fade" id="events" role="tabpanel" aria-labelledby="events-tab">
                <div class="container row rounded mt-4">
                    <div class="col bg-white rounded p-5 border">
                        <h3>Create New Event</h3>
                        <form id="event-form" action="/events/add" method="POST">
                            <div class="form-group">
                                <label for="event-title">Event Title</label>
                                <input type="text" class="form-control" id="event-title" name="title"
                                    placeholder="Enter event title" required>
                            </div>
                            <div class="form-group">
                                <label for="event-details">Event Details</label>
                                <textarea class="form-control" id="event-details" name="details"
                                    placeholder="Enter event details" required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="event-date">Event Date</label>
                                <input type="date" class="form-control" id="event-date" name="date" required>
                            </div>
                            <button type="submit" class="btn btn-custom mt-3">Add Event</button>
                            <button type="button" class="btn btn-custom mt-3 d-none" id="update-event">Update</button>
                        </form>
                    </div>
                </div>
                <div class="bg-light rounded mt-4 p-4 scrollable">
                    <h3>Upcoming Events</h3>
                    <% if (events && events.length> 0) { %>
                        <% events.forEach(event=> { %>
                            <div class="event-item bg-white p-3 mb-3 rounded border" data-id="<%= event._id %>">
                                <h4>
                                    <%= event.title %>
                                </h4>
                                <p>
                                    <%= event.details %>
                                </p>
                                <small class="text-muted">
                                    <%= new Date(event.date).toLocaleDateString() %>
                                </small>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <button class="btn btn-warning edit-event">Edit</button>
                                    <button class="btn btn-danger delete-event"
                                        data-id="<%= event._id %>">Delete</button>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p>No upcoming events.</p>
                                    <% } %>
                </div>
            </div>
        </div>

        <!-- Modal for delete confirmation -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this item?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer">
            <p id="current-date">Date: January 01, 2024</p>
        </div>
    </div>


    <!-- Bootstrap 5 and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"   crossorigin="anonymous"></script>
    <script src="https://cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>
    <script>
        function updateDate() {
            const dateElement = document.getElementById('current-date');
            const currentDate = new Date();
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            dateElement.textContent = 'Date: ' + currentDate.toLocaleDateString('en-US', options);
        }
        window.onload = updateDate;
    </script>
    <script>
        CKEDITOR.replace('editor', {
            toolbar: [
                { name: 'basicstyles', items: ['Bold', 'Italic'] },
                { name: 'paragraph', items: ['NumberedList', 'BulletedList'] },
                { name: 'links', items: ['Link'] },
                { name: 'insert', items: ['Blockquote'] }
            ],
            height: 150,
            removeButtons: ''
        });

        CKEDITOR.instances.editor.on('change', function () {
            const content = CKEDITOR.instances.editor.getData();
            const contentLength = content.replace(/<\/?[^>]+(>|$)/g, '').length; // Remove HTML tags to count text only
            const charCount = document.getElementById('char-count');
            const hiddenDescription = document.getElementById('hidden-description');
            const maxChars = 250;

            charCount.textContent = `${contentLength}/${maxChars} characters`;
            hiddenDescription.value = content;

            if (contentLength > maxChars) {
                CKEDITOR.instances.editor.undo(); // Undo last change if it exceeds max length
            }
        });

        $(document).ready(function () {
            let deleteId = '';
            let deleteType = '';

            // Show delete confirmation modal
            $('.delete-announcement, .delete-event').on('click', function () {
                deleteId = $(this).data('id');
                deleteType = $(this).hasClass('delete-announcement') ? 'announcement' : 'event';
                $('#deleteModal').modal('show');
            });

            // Confirm delete
            $('#confirmDelete').on('click', function () {
                const url = deleteType === 'announcement' ? `/announcements/delete/${deleteId}` : `/events/delete/${deleteId}`;
                $.ajax({
                    url: url,
                    type: 'DELETE',
                    success: function (result) {
                        window.location.reload();
                    },
                    error: function (err) {
                        console.error('Error deleting:', err);
                    }
                });
                $('#deleteModal').modal('hide');
            });

            // Edit announcement
            $('.edit-announcement').on('click', function () {
                const id = $(this).closest('.announcement-item').data('id');
                const title = $(this).closest('.announcement-item').find('h4').text();
                const description = $(this).closest('.announcement-item').find('.announcement-description').html();

                $('#title').val(title);
                CKEDITOR.instances.editor.setData(description);
                $('#announcement-form').attr('action', `/announcements/edit/${id}`);
                $('#announcement-form button[type="submit"]').addClass('d-none');
                $('#update-announcement').removeClass('d-none');
            });

            // Edit event
            $('.edit-event').on('click', function () {
                const id = $(this).closest('.event-item').data('id');
                const eventTitle = $(this).closest('.event-item').find('h4').text();
                const eventDetails = $(this).closest('.event-item').find('p').text();
                const eventDate = new Date($(this).closest('.event-item').find('small').text()).toISOString().split('T')[0];

                $('#event-title').val(eventTitle);
                $('#event-details').val(eventDetails);
                $('#event-date').val(eventDate);
                $('#event-form').attr('action', `/events/edit/${id}`);
                $('#event-form button[type="submit"]').addClass('d-none');
                $('#update-event').removeClass('d-none');
            });

            // Update announcement
            $('#update-announcement').on('click', function () {
                $('#announcement-form').submit();
            });

            // Update event
            $('#update-event').on('click', function () {
                $('#event-form').submit();
            });

            // Validate form submission
            $('#announcement-form').on('submit', function (e) {
                if (CKEDITOR.instances.editor.getData().replace(/<\/?[^>]+(>|$)/g, '').length > 250) {
                    alert('Description exceeds the maximum length of 250 characters.');
                    e.preventDefault();
                }
            });
        });
    </script>
</body>

</html>